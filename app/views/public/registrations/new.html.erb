<%= render 'public/header' %>

<p id="notice"></p>

<div class="container">
  <h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="col-md-3">
        <label>名前</label>
      </div>
      <div class="col-md-9">
        (姓)<%= f.text_field :last_name, class: "mr-5" %>(名)<%= f.text_field :first_name %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <label>フリガナ</label>
      </div>
      <div class="col-md-9 pl-0">
      (セイ)<%= f.text_field :last_name_kana, class: "mr-4" %>(メイ)<%= f.text_field :first_name_kana %>
      </div>
    </div>


    <div class="row">
      <div class="col-md-3">
        <label>性別</label>
      </div>
      <div class="col-md-5 ml-4">
        <%= f.radio_button :sex, "man" %>
        <%= f.label :sex, "男性" %>

        <%= f.radio_button :sex, "woman" %>
        <%= f.label :sex, "女性" %>
      </div>
    </div>


    <div class="row">
      <div class="col-md-3">
        <%= f.label :year_birth, '生年月日' %>
      </div>
      <div class="col-md-5 ml-4">
        <%= f.date_select :year_birth,start_year: 1930, end_year: (Time.now.year - 15), default: Date.new(1989, 1, 1) %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <label>年齢</label>
      </div>
      <div class="col-md-5 ml-4">
        <%= f.text_field :age, style: "width:50px" %>
      </div>
    </div>



    <div class="row">
      <div class="col-md-3">
         <label>郵便番号(ハイフンなし)</label>
      </div>
      <div class="col-md-5 ml-4">
        <%= f.text_field :postal_code, style: "width:200px" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <label>住所</label>
      </div>
      <div class="col-md-5 ml-4">
        <%= f.text_field :address, style: "width:400px" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <label>電話番号(ハイフンなし)</label>
      </div>
      <div class="col-md-5 ml-4">
        <%= f.text_field :telephone_number, style: "width:200px" %>
      </div>
    </div>

    <div class="row field">
      <div class="col-md-3">
        <%= f.label :email, 'メールアドレス' %>
      </div>
      <div class="col-md-5 ml-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width:400px" %>
      </div>
    </div>

    <div class="row field">
      <div class="col-md-3">
        <%= f.label :password, 'パスワード'  %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
      </div>

      <div class="col-md-5 ml-4">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row field">
      <div class="col-md-3">
        <%= f.label :password_confirmation, 'パスワード(確認用)' %>
      </div>
      <div class="col-md-5 ml-4">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row actions mt-4 mb-4">
      <div class="col-md-9 offset-md-3">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <h3><strong>既に登録済みの方</strong></h3>
        <%= link_to 'こちら', new_customer_session_path %>からログインしてください。
      </div>
    </div>

  <% end %>

</div>

<%#= render "public/shared/links" %>

<%= render 'public/footer' %>
