<%= render 'public/header' %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">
      <div class="row">

        <div class="col-md-2">
          <div class="border border-dark">
            <p class="border-bottom border-dark">ジャンル検索</p>
            <div>
              <% Genre.all.each do |genre|%>
              <%# @genre.each do |genre|%>
                <%= link_to genre.name, genres_path(genre: genre.id) %></br>
              <% end %>
