          </div>
        </div>

        <div class="col-md-10">
          <% if @genre.blank? %>
            <h5>メニュー一覧</h5>
          <% else %>
            <h5><%= @genre.name %>のメニュー一覧</h5>
          <% end %>
          <div class="d-flex flex-wrap">
          <div class="row">
            <% @genre.menus.each do |menu| %>
              <!--<div class="col-md-4">-->
              <!--  <%#= menu.name %>-->
              <!--</div>-->
              <div class="col-md-4">
                <!--メニュー名-->
                <%= link_to menu_path(menu.id) do %>
                  <%= menu.name %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<%= render 'public/footer' %>


