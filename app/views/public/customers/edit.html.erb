
<%= render 'public/header' %>

<h5>会員編集</h5>

<%= form_with model:  @customer, url:customer_path, method: :patch do |f| %>

  <label>商品画像</label>
  <%= f.file_field :image, accept: "image/*" %>

  <label>氏名</label>
  <%= f.text_field :last_name %><%= f.text_field :first_name %>

  <label>カナ</label>
  <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>

  <label>性別</label>
  <%= f.radio_button :sex, "man" %>
  <%= f.label :sex, "男性" %></br>

  <%= f.radio_button :sex, "woman" %>
  <%= f.label :sex, "女性" %>

  <label>生年月日</label>
  <%= f.label :year_birth %><br />
  <%= f.date_select :year_birth,start_year: 1930, end_year: (Time.now.year - 15), default: Date.new(1989, 1, 1) %>

  <label>年齢</label>
  <%= f.text_field :age %>

  <label>メールアドレス</label>
  <%= f.text_field :email %>

  <label>住所</label>
  <%= f.text_field :address %>

  <label>電話</label>
  <%= f.text_field :telephone_number %>

  <%= f.submit '変更を保存', class: "btn btn-success" %>

<% end %>

<%= render 'public/footer' %>
