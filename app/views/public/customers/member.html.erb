<%= render 'public/header' %>

<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">
      <h5>会員証</h5>
      <div class="row">
        <div class="col-md-6">
          <!--画像-->
          <%= image_tag current_customer.get_profile_image(400, 400, "Center") %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <!--バーコード-->
          <%= image_tag @barcode %>
        </div>
        <div class="col-md-4">
          <!--詳細ボタン-->
          <%= link_to "会員詳細", customers_mypage_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'public/footer' %>

