<%= render 'admin/header' %>

<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">
      <h4>ジャンル編集</h4>
      <%= form_with model: @genre, url:admin_genre_path, method: :patch do |f| %>
        <div class="row">
          <div class="col-2 pb-3">
            <p>ジャンル名</p>
          </div>
          <div class="col-3 pb-3">
            <%= f.text_field :name %>
          </div>
          <div class="col-7 pb-3">
             <%= f.submit '変更を保存', class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'admin/footer' %>
