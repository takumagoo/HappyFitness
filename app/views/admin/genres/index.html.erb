<!--ジャンル一覧・追加画面-->
<%= render 'admin/header' %>

<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-7 mb-4">
        <h4>ジャンル一覧・追加</h4>
        <%= form_with model: @genre, url:admin_genres_path do |f| %>
          <div class="row mt-4">
            <div class="col-3 pb-3">
              <p>ジャンル名</p>
            </div>
            <div class="col-7 pb-3">
              <%= f.text_field :name %>
            </div>
            <div class="col-1 pb-3">
              <%= f.submit '新規登録', class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
        <!--ジャンル一覧-->
      <div class="row">
        <div class="col-10">
          <ul class="list-group">
            <li class="list-group-item">
              <div class="row">
                <div class="col-11 pb-3">
                  <h5>ジャンル一覧</h5>
                </div>
                <div class="col-1 pb-3"></div>
              </div>
            </li>
            <% @genres.each do |genre| %>
              <li class="list-group-item">
               <div class="row">
                  <div class="col-3 pb-3">
                    <%= genre.name %>
                  </div>
                  <div class="col-4 pb-3">
                    <%= link_to "メニュー一覧", admin_index_path(genre.id), class: "btn btn-primary" %>
                  </div>
                  <div class="col-3 pb-3">
                    <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
                  </div>
                  <div class="col-2 pb-3">
                    <%= link_to "削除", admin_genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'admin/footer' %>
