<%= render 'admin/header' %>

<div class="container">
  <h5 class="mt-3 mb-4">管理者ログイン</h5>
  <div class="row">

    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 d-flex justify-content-center ">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col-5 pb-3"><%= f.label :email, 'メールアドレス' %></div>

          <div class="col-7 pb-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        </div>

        <div class="row">
          <div class="col-5 pb-4"><%= f.label :password, 'パスワード' %></div>
          <div class="col-7 pb-4"><%= f.password_field :password, autocomplete: "current-password" %></div>
        </div>
        
        <div class="row">
          <div class="col-5"></div>
          <div class="col-7"><%= f.submit "ログイン", class: "btn btn-primary" %></div>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>

<%= render 'admin/footer' %>