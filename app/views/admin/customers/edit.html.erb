<h5>会員情報編集</h5>

<%= form_with model: @customer, url:customer_path(@customer.id), method: :patch do |f| %>
  <label>商品画像</label>
  <%= f.file_field :image, accept: "image/*" %>
  <label>氏名</label>
  <%= f.text_field :last_name, class: "mr-3" %><%= f.text_field :first_name %>
  <label>カナ</label>
  <%= f.text_field :last_name_kana, class: "mr-3" %><%= f.text_field :first_name_kana %>
  <label>性別</label>

  <label>生年月日</label>

  <label>年齢</label>

  <label>郵便番号</label>
  <%= f.text_field :postal_code %>
  <label>住所</label>
  <%= f.text_field :address %>
  <label>電話番号</label>
  <%= f.text_field :telephone_number %>
  <label>メールアドレス</label>
  <%= f.text_field :email %>

  <%= f.submit '編集内容を保存', class: "btn btn-success mr-5" %>

<% end %>
