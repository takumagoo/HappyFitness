<!--トレーニングメニュー新規登録画面-->
<%= render 'admin/header' %>

<% if @menu.errors.any? %>
  <%= @menu.errors.count %>件のエラーが発生しました
  <ul>
    <% @menu.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10">
      <h5 class="mb-4">トレーニングメニュー登録</h5>
      <%= form_with model: @menu, url:admin_menus_path do |f| %>
        <div class="row">
          <div class="col-3 pb-3">
              <label>ジャンル</label>
          </div>
          <div class="col-7 pb-3">
            <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
          </div>
        </div>
        <div class="row">
          <div class="col-3 pb-3">
              <label>メニュー名</label>
          </div>
          <div class="col-7 pb-3">
              <%= f.text_field :name %>
          </div>
        </div>
        <div class="row">
          <div class="col-3 pb-3">
              <label>メニュー説明</label>
          </div>
          <div class="col-7 pb-3">
              <%= f.text_area :explanation, style: "width:600px", rows: "5" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-7">
              <%= f.submit '新規登録', class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'admin/footer' %>
