<!--トレーニングメニュー編集画面-->

<%= render 'admin/header' %>

<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">
      <h5 class="mb-4">トレーニングメニュー編集</h5>
      <%= form_with model: @menu, url:admin_menu_path, method: :patch do |f| %>
        <div class="row">
          <div class="col-2 pb-3">
            <p>メニュー名</p>
          </div>
          <div class="col-3 pb-3">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="row">
          <div class="col-2 pb-3">
            <p>説明</p>
          </div>
          <div class="col-3 pb-3" >
            <%= f.text_area :explanation, style: "width:600px", rows: "5" %>
          </div>
        </div>
        <div  class="row">
          <div class="col-5 mr-2">
               <%= f.submit '変更を保存', class: "btn btn-success" %>
          </div>
          <div class="col-5">
            <%= link_to "削除する", admin_menu_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<%= render 'admin/footer' %>